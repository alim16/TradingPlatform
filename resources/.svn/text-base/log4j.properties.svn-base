log4j.rootLogger = DEBUG, toFILE

# Define the file appender
log4j.appender.toFILE=org.apache.log4j.FileAppender


#layout for file appender
log4j.appender.toFILE=org.apache.log4j.DailyRollingFileAppender
log4j.appender.toFILE.layout=org.apache.log4j.PatternLayout
log4j.appender.toFILE.layout.conversionPattern=%d{HH:mm:ss} %5p [%t] - %c.%m %L %m%n
log4j.appender.toFILE.File=./logs/log.txt
log4j.appender.toFile.DatePattern='.'yyyy-MM-dd